<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>


<div class="jumbotron">  <!--사이즈에 유동적으로 조절이 가능-->
  <h1 class="display-4">총대는 내가 멜게,</h1>
  <h1 class="display-4"> 스터디는 누가 할래?</h1>
  <hr class="my-4">

  <form>
      <div class="form-group">
        
        <input type="text" class="form-control"  style="width:500px;height:40px;font-size:20px;" id="exampleFormControlInput1" placeholder="원하는 스터디를 입력하세요.">
      </div>
      </form>
  
    <button type="button" class="btn btn-info">찾아보기</button>
  
</div>

<div class="container">

  <h1>News</h1>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link <% if (!selectedCategory) { %>active<% } %>" href="/news">전체</a>
    </li>
    <% for(var i=0; i < category.length; i++) { %>
      <a class="nav-link <% if (selectedCategory==category[i].id) { %>active<% } %>" href="?category=<%= category[i].id %>"><%= category[i].title %></a>
    <% } %>
  </ul>

  <% if (news.length>0) { %>
  <div class="row">
   
    <div class="col-sm-2">
        <% for(var i=0; i < news.length; i++) { %>
        <div class="card" >
            <img src="/uploads/<%= news[i].upload %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= news[i].title %></h5>
                
                <a href="https://sports.v.daum.net/v/NyzNEJTLC6" class="btn btn-primary">스터디참여하기</a>
                <%= news[i].category_title %> /
                <%= news[i].author %>
              </div>
        </div>
        <% } %>
    </div>
    
</div>



  

  <% } else { %>
    <div class="card">
      <div class="card-header">
        Alert!
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>개설된 스터디가 없습니다.</p>
        </blockquote>
      </div>
    </div>
  <% } %>

  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group" aria-label="First group">
    </div>
    <div class="input-group">
      <a href="/news/add" class="btn btn-outline-success">기사작성</a>
    </div>
  </div>
</div>


<%- include('includes/footer'); -%>
